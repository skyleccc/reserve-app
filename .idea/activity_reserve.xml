<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8E1"
    android:padding="16dp">

    <!-- Top bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserve"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/defaultpfp" />
    </RelativeLayout>

    <!-- Search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#EADAE9"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/menubttn" />

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ayala Center Cebu"
            android:background="@android:color/transparent"
            android:paddingStart="10dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/searchicon" />
    </LinearLayout>

    <!-- Card 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:text="Near Lechon House"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Azalla's Lechon House, Saint Jude Street, Cebu City"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/lechonmap"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_marginTop="8dp"
            android:text="First Hour = ₱30.00\nExceeding = ₱15.00\nPer Day = ₱345.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/book_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now!"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Card 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="12dp"
        android:elevation="2dp">

        <TextView
            android:text="Motorcycle Parking, near sunburst"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="8W94+FHR, Cebu City, 6000 Cebu"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/motorpark"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_marginTop="8dp"
            android:text="First Hour = ₱35.00\nExceeding = ₱20.00\nPer Day = ₱350.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/book_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now!"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>
