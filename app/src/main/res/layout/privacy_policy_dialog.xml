<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/privacyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy for Reserve Parking App"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Effective Date: January 1, 2025"
            android:textStyle="italic"
            android:paddingBottom="16dp" />

        <!-- Section 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Information We Collect"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Personal Information: name, email, phone, vehicle info\n - Location Information: for nearby parking\n- Usage Data: app activity, reservations"
            android:paddingBottom="12dp" />

        <!-- Section 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. How We Use Your Information"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- To facilitate parking spot reservations\n- Improve the app and user support\n- Send account and reservation notifications"
            android:paddingBottom="12dp" />

        <!-- Section 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Sharing Your Information"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We do not sell your personal information. We may share data with:\n- Parking providers\n- Trusted service providers\n- Authorities when legally required"
        android:paddingBottom="12dp" />

        <!-- Section 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Your Privacy Rights"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Access/update your data\n- Request data deletion\n- Opt-out of location tracking"
            android:paddingBottom="12dp" />

        <!-- Section 5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Data Security"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We use encryption and secure storage, but no system is completely secure."
            android:paddingBottom="12dp" />

        <!-- Section 6 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Childrenâ€™s Privacy"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We do not collect personal information from children under 13."
            android:paddingBottom="12dp" />

        <!-- Section 7 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7. Changes to This Policy"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We may update this policy and notify you through the app."
            android:paddingBottom="12dp" />

        <!-- Section 8 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8. Contact Us"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: support@reserveparking.com\nAddress: 123 Reserve Ave, Parking City, PC 12345" />
    </LinearLayout>
</ScrollView>
