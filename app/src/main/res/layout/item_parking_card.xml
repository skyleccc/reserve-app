<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_margin="8dp"
        android:elevation="4dp">

        <!-- Location Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/location_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Near Lechon House"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Azalla's Lechon House, Saint Jude Street, Hippodromo, Cebu City, 6000 Cebu"
                    android:textColor="#444444"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/saveBtn"
                android:layout_width="45dp"
                android:clickable="true"
                android:background="@null"
                android:layout_height="42dp"
                app:srcCompat="@drawable/ic_saved" />
        </LinearLayout>

        <!-- Address -->

        <!-- Image and Prices Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Map Image -->
            <ImageView
                android:id="@+id/map_thumbnail"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_map_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners"
                android:layout_marginEnd="12dp" />

            <!-- Price Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/et_rate_3h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Hours   = ₱30.00"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/et_rate_6h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 Hours   = ₱100.00"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/et_rate_12h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Hours = ₱175.00"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/per_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Per Day    = ₱345.00"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>

        <!-- Book Now Button -->
        <Button
            android:id="@+id/book_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now!"
            android:textAllCaps="false"
            android:backgroundTint="#4B4B4B"
            android:textColor="#FFFFFF"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />
    </LinearLayout>


</LinearLayout>